      f=open("HammadE.txt","a")
      f.write(str([str(getdate())])+" "+input("enter your exercise plan:\n"))
      f.close()
    else:
      print("there are no more options")
elif task=="read" or task=="READ"or task=="Read":
  person=input("Press 1 for harry 2 for rohan and 3 for hammad :\n")
  if person=="1":
    plan=input("press 1 for diet and 2 for exercise:\n")
    if plan=="1":
      f=open("HarryD.txt")
      g=f.read()
      print(g)
      f.close()
    elif plan=="2":
      f=open("HarryE.txt","a")
      g=f.read()
